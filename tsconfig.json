{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "./releases",
    "target": "ES5",
    "lib": [
      "ESNext",
      "esnext.asynciterable"
    ],
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "baseUrl": ".",
  },
  "compileOnSave": false,
  "includes": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "releases"
  ]
}